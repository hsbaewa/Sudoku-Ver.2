<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tabContentLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/navigationBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationBar"
            style="@style/Theme.HSSudoku2.BottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:theme="@style/Theme.HSSudoku2.BottomNavigation"
            app:itemIconTint="@color/color_navigation_tab"
            app:itemTextAppearanceActive="@style/Theme.HSSudoku2.BottomNavigation.TextAppearance"
            app:itemTextAppearanceInactive="@style/Theme.HSSudoku2.BottomNavigation.TextAppearance"
            app:itemTextColor="@color/color_navigation_tab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabContentLayout"
            app:menu="@menu/main_navigation" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
