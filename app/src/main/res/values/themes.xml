<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HSSudoku2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryVariant">@color/gray_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_500</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>

        <item name="bottomSheetDialogTheme">@style/Theme.HSSudoku2.BottomSheetDialog</item>

        <!-- 툴바 스타일 -->
        <item name="toolbarStyle">@style/Theme.HSSudoku2.Toolbar</item>
        <!-- 앱바 스타일 -->
        <item name="appBarLayoutStyle">@style/Theme.HSSudoku2.AppBarLayout</item>
    </style>

    <style name="Theme.HSSudoku2.BottomNavigation" parent="Theme.HSSudoku2">
        <item name="colorPrimary">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="Theme.HSSudoku2.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/gray_500</item>
        <item name="fontFamily">@font/goreyong_ddalgi</item>
    </style>

    <style name="Theme.HSSudoku2.BottomNavigation.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.HSSudoku2.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.HSSudoku2.BottomSheet</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.HSSudoku2.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.HSSudoku2.Spinner">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:fontFamily">@font/goreyong_ddalgi</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.HSSudoku2.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/splash_branding_logo
        </item>

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.HSSudoku2</item>
        # Required.
    </style>

    <!-- AppBarLayout 스타일 -->
    <style name="Theme.HSSudoku2.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Toolbar 스타일 -->
    <style name="Theme.HSSudoku2.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Appearance.HSSudoku2.Toolbar.Title</item>
        <item name="titleTextColor">@color/gray_600</item>
        <item name="titleCentered">true</item>
        <!--        <item name="navigationIcon">@drawable/icon_go_back</item>-->
        <!--        <item name="homeAsUpIndicator">@drawable/icon_go_back</item>-->
    </style>

    <style name="Appearance.HSSudoku2.Toolbar.Title" parent="">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/goreyong_ddalgi</item>
    </style>


</resources>